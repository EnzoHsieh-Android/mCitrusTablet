    android:layout_height="match_parent"
    tools:context=".view.setting.SettingFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/gray"
        android:clickable="true"
        android:layout_margin="@dimen/dp_10"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="@id/guideline33"
        app:layout_constraintEnd_toEndOf="@id/guideline75"
        app:layout_constraintStart_toStartOf="@+id/spread_part"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_marginTop="@dimen/dp_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:scaleType="centerCrop"
                app:lottie_autoPlay="true"
                app:lottie_fileName="basicSetting.json"
                app:lottie_loop="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="top|center"
                android:text="Store Setting"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

