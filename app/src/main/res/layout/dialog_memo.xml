<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="center_horizontal"
    android:padding="@dimen/padding_15"
    android:background="@drawable/custom_dialog_bg"
    android:backgroundTint="@color/lightBg"
    android:elevation="@dimen/dp_4"
    android:orientation="vertical"
    android:clipToPadding="false">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_10">



            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/padding_10"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/sp_22"
                android:textStyle="bold"
                tools:text="Title" />

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="@dimen/padding_10"
                android:paddingBottom="@dimen/padding_10"
                android:paddingStart="@dimen/padding_15"
                android:paddingEnd="@dimen/padding_15"
                android:textColor="@color/colorSecondText"
                android:textSize="@dimen/sp_16"
                android:gravity="center"
                tools:text="Message Message Message Message Message Message Message "
                tools:visibility="visible"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingStart="@dimen/padding_15"
        android:paddingEnd="@dimen/padding_15"
        android:clipToPadding="false"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/view_trans_click_45"
            android:padding="@dimen/padding_15"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/selector_text"
            android:text="@string/cancel"
            android:visibility="gone"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btnOK"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/padding_15"
            android:layout_weight="1"
            android:maxWidth="100dp"
            android:textStyle="bold"
            android:background="@drawable/button_white_45"
            android:textColor="@color/selector_text"
            android:elevation="5dp"
            android:padding="@dimen/padding_15"
            android:textSize="@dimen/sp_12"
            android:text="@string/sure"
            android:visibility="visible" />

    </LinearLayout>


</LinearLayout>