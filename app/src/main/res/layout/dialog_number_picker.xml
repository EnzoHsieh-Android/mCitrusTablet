<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerInParent="true"
    android:layout_gravity="center_horizontal"
    android:padding="@dimen/padding_15"
    android:background="@drawable/custom_dialog_bg"
    android:backgroundTint="@color/lightBg"
    android:elevation="@dimen/dp_4"
    android:orientation="vertical"
    android:clipToPadding="false">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_10"
            android:gravity="center">


            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/padding_10"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                tools:text="Title" />

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/number_picker"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_80"
                android:layout_centerInParent="true"
                app:np_selectedTextColor="@color/primaryDarkColor"
                app:np_selectedTextSize="@dimen/sp_20"
                app:np_textColor="@color/black"
                app:np_dividerColor="@color/gray"
                app:np_textSize="@dimen/sp_14"
                app:np_value="1" />

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:paddingStart="@dimen/padding_15"
        android:paddingEnd="@dimen/padding_15"
        android:clipToPadding="false"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/button_white_45"
            android:textColor="@color/selector_text"
            android:padding="@dimen/padding_15"
            android:textSize="@dimen/sp_12"
            android:text="@string/no"
            android:visibility="visible"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btnOK"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/padding_15"
            android:layout_weight="1"
            android:maxWidth="100dp"
            android:textStyle="bold"
            android:background="@drawable/button_white_45"
            android:textColor="@color/selector_text"
            android:elevation="5dp"
            android:padding="@dimen/padding_15"
            android:textSize="@dimen/sp_12"
            android:text="@string/sure"
            android:visibility="visible" />

    </LinearLayout>


</LinearLayout>
